<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bkit.fatdown.mappers.dao.RolePermissionRelationDao">
    <!--批量新增回写主键支持-->
    <insert id="insertList">
        INSERT INTO tb_role_permission_relation (role_id, permission_id) VALUES
        <foreach collection="list" separator="," item="item" index="index">
            (#{item.roleId,jdbcType=BIGINT},
            #{item.permissionId,jdbcType=BIGINT})
        </foreach>
    </insert>
    <select id="getPermissionList" resultMap="com.bkit.fatdown.mappers.TbPermissionMapper.BaseResultMap">
        SELECT
            p.*
        FROM
           tb_role_permission_relation r
                LEFT JOIN tb_permission p ON r.permission_id = p.id
        WHERE
            r.role_id = #{roleId};
    </select>
</mapper>